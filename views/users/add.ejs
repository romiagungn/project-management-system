<%- include("../partials/navbar") %>

<div class="container-fluid" style="background-image: ('url:images/Robson-Mountain.jpg');">

    <br>
    <h2>Add User</h2>
    <hr>

    <div class="container""> 
    <form id=" form-filter" method="POST">
        <div class="container form-group row">
            <label for="inputID" class="col-sm-2 col-form-label"> First Name </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name='firstname' placeholder="First Name">
            </div>
        </div>
        <div class="container form-group row">
            <label for="inputID" class="col-sm-2 col-form-label"> Last Name </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name='lastname' placeholder="Last Name">
            </div>
        </div>
        <div class="container form-group row">
            <label for="inputID" class="col-sm-2 col-form-label"> Email </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name='email' placeholder="Email">
            </div>
        </div>
        <div class="container form-group row">
            <label for="inputID" class="col-sm-2 col-form-label"> Password </label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name='password' placeholder="Password">
            </div>
        </div>
        <div class="container form-group row">
            <label for="inputBoolean" class="col-sm-2 col-form-label"> Position </label>
            <div class="col-sm-10">
                <select class="custom-select" name="inputMember">
                    <option value="">Choose Position</option>
                    <option value="">Quality Assurance</option>
                    <option value="">Manager</option>
                    <option value="">Software Developer</option>
                </select>
            </div>
        </div>
        <fieldset class="form-group">
            <div class="container form-group row">
                <legend class="col-form-label col-sm-2 pt-0"> Type Job </legend>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="gridRadios1" name="inputTypeJob"
                            value="Full Time" checked>
                        <label class="form-check-label" for="gridRadios1">
                            Full Time
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" id="gridRadios2" name="inputTypeJob"
                            value="Part Time">
                        <label class="form-check-label" for="gridRadios2">
                            Part Time
                        </label>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="container form-group row">
            <div class="col-sm-10">
                <button class="btn btn-dark my-2 my-sm-0" type="submit">Save</button>
                <a href="/users" class="btn btn-dark my-2 my-sm-0" type="button">Cancel</a>
            </div>
        </div>
        </form>
    </div>
</div>

