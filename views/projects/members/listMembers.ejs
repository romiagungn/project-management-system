<%- include("../../partials/sidebar") %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <div class="container-fluid">
        <div class="chartjs-size-monitor-expand"
            style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div>
        </div>
        <div class="chartjs-size-monitor-shrink"
            style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;">
            <div style="position:absolute;width:200%;height:200%;left:0; top:0"></div>
        </div>
        <br>
        <h2 class="text-center"> <%= title %> <small class="text-muted">#1 Web Project - Company Profile</small> 
        </h2>
        <hr>
        <br>

    <div class="container">
        <div class="card">
            <div class="card-body">
                <h3>Filters</h3>
                <hr>
                <form id="form-filter" method="GET">

                    <input type="hidden" name="page" value="1">
                    <div class="container form-group row">
                        <label for="inputID" class="col-sm-2 col-form-label">
                            <input type="checkbox" id="inputID" name="cid"> ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name='id' placeholder="ID">
                        </div>
                    </div>

                    <div class="container form-group row">
                        <label for="inputName" class="col-sm-2 col-form-label">
                            <input type="checkbox" id="inputName" name="cnama"> Name </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name='nama' placeholder="Name">
                        </div>
                    </div>

                    <div class="container form-group row">
                        <label for="inputPosition" class="col-sm-2 col-form-label"> 
                            <input type="checkbox" id="inputPosition" name="cposition">
                            Position</label>
                        <div class="col-sm-10">
                            <select class="custom-select" name="position">
                                <option value="">Choose Position</option>
                                <option value="Quality Assurance">Quality Assurance</option>
                                <option value="Manager">Manager</option>
                                <option value="Software Developer">Software Developer</option>
                            </select>
                        </div>
                    </div>

                    <div class="container form-group row">
                        <div class="col-sm-10">
                            <button class="btn btn-dark my-2 my-sm-0" type="submit">Search</button>
                            <a href="" class="btn btn-dark my-2 my-sm-0" type="submit">Show All</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form method="POST" action="">
                    <h3>Options</h3>
                    <hr>
                    <div class="form-group row">
                        <div class="col-sm-2" style=>Columns</div>
                        <div class="col-sm-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkid" name="id" value="true" checked>
                                <label class="form-check-label" for="cid">
                                    ID
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkname" name="name" value="true"
                                    checked>
                                <label class="form-check-label" for="cname">
                                    Name
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkposition" name="cposition"
                                    value="true" checked>
                                <label class="form-check-label" for="cposition">
                                    Position
                                </label>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="form-group-row ">
                    <button class="btn btn-dark my-2 my-sm-0" type="submit">Apply</button>
                    <a href="/projects/members/<%= result.projectid %>/add" class="btn btn-dark my-2 my-sm-0" type="submit">Add Members</a>
                </div>
                <br>

                <table class="table">
                    <thead class="" style="background-color: #787878;">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Position</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
    <%- include("../../partials/footer") %>
</div>

</div>